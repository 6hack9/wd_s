{
	"plugins": [
		"stylelint-order",
		"stylelint-scss",
		"stylelint-declaration-use-variable"
	],
	"rules": {
		"indentation": "tab",
		"no-missing-end-of-source-newline": null,
		"scss/at-extend-no-missing-placeholder": null,
		"scss/at-function-pattern": ["^([_]?[a-z][a-z0-9]*)(-[a-z0-9]+)*$", { "message": "Please use hyphenated lowercase for function names. Also, you may use a leading underscore if you prefer." }],
		"scss/at-mixin-pattern": ["^([_]?[a-z][a-z0-9]*)(-[a-z0-9]+)*$", { "message": "Please use hyphenated lowercase for mixin names. Also, you may use a leading underscore if you prefer." }],
		"scss/dollar-variable-pattern": ["^([a-z][a-z0-9]*)(-[a-z0-9]+)*$", { "message": "Please use hyphenated lowercase for variable names. No leading underscore is allowed." }],
		"scss/percent-placeholder-pattern": ["^([_]?[a-z][a-z0-9]*)(-[a-z0-9]+)*$", { "message": "Please use hyphenated lowercase for placeholder names. Also, you may use a leading underscore if you prefer." }],
		"scss/at-mixin-argumentless-call-parentheses": "never",
		"order/order": [
			"dollar-variables",
			{
				"type": "at-rule",
				"name": "extend"
			},
			{
				"type": "at-rule",
				"name": "include"
			},
			"declarations",
			{
				"type": "at-rule",
				"name": "include",
				"hasBlock": true
			}
		],
		"order/properties-alphabetical-order": true,
		"block-no-empty": true,
		"declaration-block-single-line-max-declarations": 0,
		"color-no-invalid-hex": true,
		"sh-waqar/declaration-use-variable": [["/color/", "font-family", { "ignoreValues": [ "/^darken/", "/^lighten/", "/^rgb/", "transparent", "inherit" ] }]],
		"at-rule-blacklist": ["debug", "warn"],
		"selector-max-id": 0,
		"selector-no-qualifying-type": [true, { "ignore": ["attribute", "class", "id"] }],
		"value-no-vendor-prefix": null,
		"property-no-vendor-prefix": null,
		"selector-no-vendor-prefix": null,
		"media-feature-name-no-vendor-prefix": null,
		"at-rule-no-vendor-prefix": null,
		"selector-attribute-quotes": "always",
		"block-opening-brace-space-before": "always",
		"block-closing-brace-space-before": "always-single-line",
		"selector-class-pattern": ["^([a-z][a-z0-9]*)(-[a-z0-9]+)*|(current_page_item)|(widget_search)$", { "message": "Please use hypenated lowercase for class names, and without a leading underscore. If you find a WordPress core condition that conflicts with this convention feel free to modify and extend the ignore option." }],
		"selector-id-pattern": ["^([a-z][a-z0-9]*)(-[a-z0-9]+)*$", { "message": "Please use hypenated lowercase for ID name format, and without a leading underscore. If overriding a plugin that does not use this format then please ignore or extend the list of ignore option." }],
		"color-hex-length": "short",
		"color-hex-case": "lower",
		"number-leading-zero": "always",
		"max-nesting-depth": 5,
		"declaration-property-unit-whitelist": {
			"border": ["px"],
			"box-shadow": ["rem"],
			"font-size": ["%", "rem"],
			"letter-spacing": ["rem"],
			"line-height": [],
			"text-shadow": ["em"],
			"width": ["%", "rem", "vw"],
			"height": ["%", "rem", "vh"],
			"max-width": ["%", "rem", "vw"],
			"max-height": ["%", "rem", "vh"],
			"margin": ["rem"],
			"padding": ["rem"]
		},
		"string-quotes": "single",
		"shorthand-property-no-redundant-values": true,
		"function-parentheses-space-inside": "never",
		"property-no-unknown": true,
		"no-eol-whitespace": true
	}
}
